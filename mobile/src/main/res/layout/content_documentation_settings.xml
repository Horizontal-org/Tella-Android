                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:background="@drawable/rounded_light_purple_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/add_servers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="1">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight=".85"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/titleTV"
                                    style="@style/SettingsTitleText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:padding="2dp"
                                    android:text="@string/settings.servers.title_server.settings" />

                                <TextView
                                    android:id="@+id/explainTV"
                                    style="@style/SettingsMessageText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="@string/settings.servers.add_server.expl" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <ImageView
                                android:id="@+id/add_server"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:layout_weight=".15"
                                android:contentDescription="@string/settings.servers.add_server.expl"
                                android:src="@drawable/ic_add_circle_outline_24_orange" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/collect_servers_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" />

                    </LinearLayout>
