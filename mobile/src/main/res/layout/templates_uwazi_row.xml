<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:textDirection="locale"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/space_cadet">

    <RelativeLayout
        android:id="@+id/instanceRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:background="@drawable/bg_row_forms">
        <!--android:background="@drawable/button_pressed"-->
        <ImageView
            android:id="@+id/favorites_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/small_text_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:src="@drawable/star_border_24dp" />

        <ImageButton
            android:id="@+id/popupMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-8dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/ic_more" />

        <TextView
            android:id="@+id/name"
            style="@style/Tella_Main_White_Text.MeduimbBold"
            android:layout_toEndOf="@id/favorites_button"
            android:layout_toStartOf="@id/popupMenu"
            android:layout_gravity="start"
            android:gravity="start"
            android:lines="1"
            android:textAlignment="textStart"
            android:ellipsize="end"
            tools:text="test teststststststs"
            />

        <TextView
            android:id="@+id/organization"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/favorites_button"
            android:layout_toStartOf="@id/popupMenu"
            android:layout_gravity="start"
            android:paddingTop="2dp"
            android:textAlignment="viewStart"
            style="@style/Tella_Main_White_Text.Small"
            android:lines="1"
            android:ellipsize="end"
            tools:text="test teststststststs test testststststststest"
            />

    <!--    <TextView
             android:id="@+id/updated"
             android:layout_below="@id/organization"
             android:layout_toStartOf="@id/popupMenu"
             android:layout_alignParentStart="true"
             android:layout_gravity="start"
             android:textAlignment="viewStart"
             android:paddingTop="2dp"
             style="@style/Tella_Main_White_Text.Small"
             android:lines="1"
             android:ellipsize="end"/>-->
     </RelativeLayout>

     <!--<View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@color/wa_gray"
         android:layout_gravity="bottom" /> -->
</FrameLayout>
