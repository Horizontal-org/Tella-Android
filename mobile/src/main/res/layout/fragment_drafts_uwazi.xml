<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wa_purple"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragment.uwazi.DraftsUwaziFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/draftsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        />

    <org.hzontal.shared_ui.textviews.CenterMessageTextView
        android:id="@+id/textView_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:topImg="@drawable/ic_uwazi"
        app:textMessage="@string/Uwazi_Draft_Entities_Empty_Description"
        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_circular"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:trackColor="@color/wa_white"
        app:indicatorColor="@color/tigers_eye"
        app:trackThickness="4dp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>