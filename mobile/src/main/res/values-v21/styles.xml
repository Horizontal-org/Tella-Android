<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="patternViewStyle">@style/PatternView</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverse</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="AppTheme.NoActionBar.LineSpacing" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="patternViewStyle">@style/PatternView</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverse</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="AppTheme.NoActionBar.Justify" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="patternViewStyle">@style/PatternView</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverse</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="AppTheme.NoActionBar.LineSpacingJustify" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="patternViewStyle">@style/PatternView</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverse</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:justificationMode">inter_word</item>
    </style>
</resources>
