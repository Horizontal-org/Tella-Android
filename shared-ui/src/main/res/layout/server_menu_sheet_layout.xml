<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/drag_anchor_drawable"
    app:behavior_hideable="true"
    android:padding="21dp">

    <TextView
        android:id="@+id/standard_sheet_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Tella_Main_White_Text.Bold"
        tools:text="Test "
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/action_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/standard_sheet_title"
        style="@style/Tella2_BottomSheet_Text"
        tools:text="Test"
        android:drawableStart ="@drawable/ic_edit_white_24"
        />

    <TextView
        android:id="@+id/action_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_edit"
        style="@style/Tella2_BottomSheet_Text"
        tools:text="Test"
        android:drawableStart="@drawable/ic_delete_outline_white_24" />

</androidx.constraintlayout.widget.ConstraintLayout>