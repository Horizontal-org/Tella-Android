<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogBottomPopUpText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drag_anchor_drawable</item>
    </style>

    <style name="SettingsTitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SwitchWithMessage">
        <item name="colorControlActivated">@color/green</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsMessageText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style
        name="ShapeAppearance.Tella.FAB"
        parent="ShapeAppearance.MaterialComponents.SmallComponent" />

    <style name="Tella_Main_White_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/wa_white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Tella_Main_White_Text.Bold">
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">19dp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="Tella_Main_White_Text.Meduim">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Tella_Main_White_Text.MeduimbBold" parent="Tella_Main_White_Text.Bold">
        <item name="android:textSize">14sp</item>
    </style>

</resources>