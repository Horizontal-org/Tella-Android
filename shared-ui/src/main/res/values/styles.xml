<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogBottomPopUpText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drag_anchor_drawable</item>
    </style>

    <style name="SettingsTitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SwitchWithMessage">
        <item name="colorControlActivated">@color/green</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsMessageText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="RadioListButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="AppTheme.DarkNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/colorPrimaryInverse</item>
        <item name="android:fontFamily">@font/open_sans</item>

</resources>