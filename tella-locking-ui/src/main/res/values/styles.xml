<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Base.PatternView" parent="">
        <item name="pl_rowCount">3</item>
        <item name="pl_columnCount">3</item>
        <item name="pl_aspect">square</item>
    </style>

    <style name="PatternView" parent="Base.PatternView">
        <item name="pl_regularColor">?colorControlNormal</item>
        <item name="pl_errorColor">#fff4511e</item>
        <item name="pl_successColor">?colorControlActivated</item>
    </style>

    <style name="PatternView.Light" parent="Base.PatternView">
        <item name="pl_regularColor">?colorControlNormal</item>
        <item name="pl_errorColor">#fff4511e</item>
        <item name="pl_successColor">?colorControlActivated</item>
    </style>

    <style name="Unlock_White_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="DialogBottomPopUpBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">54dp</item>
        <item name="android:background">@drawable/pop_up_background</item>
    </style>

    <style name="Unlock_White_Text_Bold" parent="Unlock_White_Text">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Unlock_White_Text_Medium" parent="Unlock_White_Text">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Unlock_White_Text_Next" parent="Unlock_White_Text">
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginEnd">34dp</item>
        <item name="android:textColor">@color/wa_white_40</item>
    </style>

    <style name="Unlock_White_Text_Back" parent="Unlock_White_Text">
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginStart">34dp</item>
    </style>

    <style name="Password_EditText" parent="Style_EditText">
        <item name="android:inputType">numberPassword</item>
    </style>

    <style name="Calculator_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">end</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="Calculator_Edit_Text" parent="Calculator_Text">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/wa_calc_color</item>
    </style>

    <style name="Calculator_Result_Text" parent="Calculator_Text">
        <item name="android:textSize">60sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/wa_dark_green</item>
    </style>

    <style name="Unlock_White_Text_Pin" parent="Unlock_White_Text_Back">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Calculator_Keys">
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_width">@dimen/calc_key_size</item>
        <item name="android:layout_height">@dimen/calc_key_size</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/calc_text_size</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintVertical_bias">0.5</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Calculator_Light_Keys" parent="Calculator_Keys">
        <item name="android:background">@drawable/rounded_light_button_background</item>
        <item name="android:textColor">@color/wa_dark_gray</item>
    </style>

    <style name="Calculator_Green_Keys" parent="Calculator_Keys">
        <item name="android:background">@drawable/rounded_light_green_button_background</item>
        <item name="android:textColor">@color/wa_black</item>
    </style>

    <style name="Calculator_Gray_Keys" parent="Calculator_Keys">
        <item name="android:background">@drawable/rounded_gray_button_background</item>
        <item name="android:textColor">@color/wa_white</item>
    </style>

    <style name="Calculator_Dark_Green_Keys" parent="Calculator_Keys">
        <item name="android:background">@drawable/rounded_dark_green_button_background</item>
        <item name="android:textColor">@color/wa_white</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
